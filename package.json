{
  "name": "@tszip/rollup-config",
  "author": "Christian Lewis",
  "type": "module",
  "version": "2.0.0",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "preboot": "yarn clean",
    "bootstrap": "yarn boot && yarn build",
    "boot": "tsc && rollup -c --silent",
    "build": "tszip build",
    "dev": "tszip dev",
    "lint": "tszip lint",
    "test": "tszip test",
    "exe": "chmod +x dist/index.*js",
    "posttest": "node test/import.js",
    "prepublish": "yarn deduplicate && yarn build && yarn test",
    "postpublish": "git push",
    "postbuild": "yarn exe",
    "deduplicate": "yarn-deduplicate -s fewer yarn.lock",
    "deduplicate:check": "yarn-deduplicate -s fewer yarn.lock --list --fail"
  },
  "module": "./dist/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": "./dist/index.js",
    "./*": "./dist/*/index.js"
  },
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "peerDependencies": {},
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@tszip/tszip": "^4.0.2",
    "@types/cssnano": "^5.0.0",
    "@types/fs-extra": "^9.0.13",
    "husky": "^7.0.4",
    "tslib": "^2.3.1",
    "typescript": "^4.4.2",
    "yarn-deduplicate": "^3.1.0"
  },
  "dependencies": {
    "@babel/helper-module-imports": "^7.15.4",
    "@rollup/plugin-typescript": "^8.3.0",
    "@tszip/resolve-imports": "3.0.0",
    "autoprefixer": "^10.4.2",
    "cssnano": "^5.0.15",
    "fast-glob": "^3.2.9",
    "fs-extra": "^10.0.0",
    "rollup": "^2.63.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-preserve-shebang": "^1.0.1",
    "rollup-plugin-terser": "^7.0.2"
  }
}
